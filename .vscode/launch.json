{
    // Flutter 项目调试配置
    // 日迹 - 生活追踪日历应用
    "version": "0.2.0",
    "configurations": [
        {
            // 🔧 日常开发调试模式
            // 用途：平时开发时使用，支持热重载、断点调试、完整错误信息
            // 特点：包含所有调试信息，性能较慢但功能完整
            "name": "日迹 (Debug)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "--flavor",
                "development"
            ]
        },
        {
            // ⚡ 性能分析模式
            // 用途：测试应用性能、分析卡顿问题、优化动画效果
            // 特点：接近发布版性能，但保留部分调试功能，可以使用性能分析工具
            "name": "日迹 (Profile)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "profile"
        },
        {
            // 🚀 发布版本模式
            // 用途：测试最终发布版本的性能和表现
            // 特点：最高性能，移除所有调试信息，与用户实际使用版本一致
            "name": "日迹 (Release)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "release"
        },
        {
            // 📱 Android 专用调试
            // 用途：专门在 Android 设备/模拟器上测试
            // 特点：强制使用 Android 平台，测试 Android 特有功能
            "name": "日迹 (Android)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "deviceId": "android"
        },
        {
            // 🍎 iOS 模拟器调试
            // 用途：在 iOS 模拟器上测试应用表现
            // 特点：强制使用 iOS 平台，测试 iOS 特有功能和界面适配
            "name": "日迹 (iOS Simulator)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "deviceId": "ios"
        },
        {
            // 🌐 Web 浏览器调试
            // 用途：在浏览器中运行应用，测试 Web 版本
            // 特点：使用浏览器运行，可以测试响应式设计和 Web 特有功能
            "name": "日迹 (Web)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "deviceId": "web-server"
        }
    ]
}